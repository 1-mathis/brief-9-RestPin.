

{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/createPin.css') }}">
{% endblock %}

{% block title %}Création de pins
{% endblock %}

{% block body %}
	<body class="main-container">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-8">
					<div class="card">
						<div class="card-header">Créez VOTRE propre pin !!</div>
						<div class="card-body">
							{{ form_start(form, {'attr': {'class': 'form'}}) }}

							<div class="form-group">
								{{ form_label(form.body, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(form.body, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.body, {'class': 'text-danger'}) }}
							</div>

							<div class="form-group">
								{{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
								{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.description, {'class': 'text-danger'}) }}
								<p>Image</p>
							</div>

							<div class="form-group-img">
								{{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.imageFile, {'class': 'text-danger'}) }}
							</div>

							<div class="form-group-btn">
								<button type="submit" class="btn btn-primary">Créer mon pin</button>
								<a class="btn btn-danger" href="{{ path('app_home') }}">Annuler mon pin</a>
							</div>

							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
{% endblock %}
