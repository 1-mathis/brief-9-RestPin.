{% extends 'base.html.twig' %}

{% block title %}Page d'inscription
{% endblock %}

{% block body %}
	<div class="container mt-5">
		{{ form_errors(registrationForm, {'attr': {'class': 'alert alert-danger'}}) }}

		{{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

		<div class="mb-3">
			{{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
		</div>

		<div class="mb-3">
			{{ form_row(registrationForm.plainPassword, {
                'attr': {'class': 'form-control', 'placeholder': 'Password'},
                'label': 'Password'
            }) }}
		</div>

		<div class="mb-3">
			{{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
		</div>

		<div class="mb-3">
			{{ form_row(registrationForm.surname, {'attr': {'class': 'form-control', 'placeholder': 'Surname'}}) }}
		</div>

		<div class="mb-3">
			{{ form_row(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
		</div>

		<div class="mb-3">
			{{ form_row(registrationForm.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
		</div>

		<div class="mb-3">
			{{ form_row(registrationForm.imageFile, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="form-check mb-3">
			{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
			{{ form_label(registrationForm.agreeTerms, null, {'attr': {'class': 'form-check-label'}}) }}
		</div>

		<p class="mt-3">
			<button type="submit" class="btn btn-primary">S'enregistrer</button>
			<a class="btn btn-secondary" href="{{ path('app_login') }}">J'ai déjà un compte</a>
		</p>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
